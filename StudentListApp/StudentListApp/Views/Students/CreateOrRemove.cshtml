@model StudentListApp.Models.Student

@{
    ViewData["Title"] = "Create";
}
<div>
    <h2>Register Student</h2>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrRemove">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden"asp-for="StudentId"/>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentIdNumber" class="control-label"></label>
                <input asp-for="StudentIdNumber" class="form-control" />
                <span asp-validation-for="StudentIdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentSection" class="control-label"></label>
                <input asp-for="StudentSection" class="form-control" />
                <span asp-validation-for="StudentSection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
